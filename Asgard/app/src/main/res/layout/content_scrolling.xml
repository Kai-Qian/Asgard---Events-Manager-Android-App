<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_scrolling" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.brynhildr.asgard.userInterface.activities.EventDetailActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView android:layout_width="wrap_content"
        android:id="@+id/dateandtime"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:textSize="30dp" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:id="@+id/eventName"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <TextView android:layout_width="wrap_content"
        android:id="@+id/description"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin1"
        android:layout_marginBottom="@dimen/text_margin2"
        android:textSize="20dp"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin1"
        android:text="Target Participant:"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <TextView android:layout_width="wrap_content"
        android:id="@+id/targetParticipant"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin1"
        android:layout_marginBottom="@dimen/text_margin2"
        android:textSize="20dp"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin1"
        android:text="Address:"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <TextView android:layout_width="wrap_content"
        android:id="@+id/address"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin1"
        android:layout_marginBottom="@dimen/text_margin2"
        android:textSize="20dp"/>

    <ImageButton
        android:id="@+id/mapbutton"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.61" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin1"
        android:text="Dress Code:"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <TextView android:layout_width="wrap_content"
        android:id="@+id/dresscode"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin1"
        android:layout_marginBottom="@dimen/text_margin2"
        android:textSize="20dp"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin1"
        android:text="Maximum People:"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <TextView android:layout_width="wrap_content"
        android:id="@+id/maximumPeople"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin1"
        android:layout_marginBottom="@dimen/text_margin2"
        android:textSize="20dp"/>


</LinearLayout>


</android.support.v4.widget.NestedScrollView>
